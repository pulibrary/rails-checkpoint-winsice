<div class="container m-4">
  <%= image_tag("sharerify.png", :alt => "Sharerify", class: "logo-small") %>
</div>

<div class="container col-9 widget pt-5 text-center rounded-5">

  <div class="row">
    <div class="montserrat-h2">Are you sure you want to delete the following?</div>
    <div class="montserrat-h1 m-4 p-4"> <%= @playlist.playlist_name %> </div>
  </div>

  <div class="row justify-content-center">

    <div class="col-2">
      <%= form_with model: @playlist, url: "/account", method: :get do |form| %>
        <%= form.submit "Back", {class: "button px-5 rounded-5"} %>
      <% end %>
    </div>

    <div class="col-2">
      <%= form_with model: @playlist, url: "/playlists/#{@playlist.id}/delete", method: :post do |form| %>
          <%= form.submit "Confirm", {class: "button px-5 rounded-5"} %>
      <% end %>
    </div>
    
  </div>

</div>